<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="org.example.frontend.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <AnchorPane prefHeight="294.0" prefWidth="457.0">
         <children>
            <TextArea fx:id="areaTextBox" layoutX="14.0" layoutY="14.0" prefHeight="265.0" prefWidth="200.0" wrapText="true" />
            <TextField fx:id="inputName" layoutX="309.0" layoutY="14.0" />
            <Label layoutX="241.0" layoutY="18.0" text="Name" />
            <Label layoutX="241.0" layoutY="51.0" text="Description" />
            <TextField fx:id="inputDescription" layoutX="309.0" layoutY="47.0" />
            <Button layoutX="309.0" layoutY="79.0" mnemonicParsing="false" onAction="#addNewTask" text="Add new task" />
            <Button layoutX="309.0" layoutY="169.0" mnemonicParsing="false" onAction="#removeTask" text="Remove task" />
            <Label layoutX="243.0" layoutY="139.0" text="ID" />
            <TextField fx:id="inputID" layoutX="309.0" layoutY="135.0" />
            <Button layoutX="309.0" layoutY="228.0" mnemonicParsing="false" onAction="#getAllTasks" text="Get all tasks" />
            <Button layoutX="309.0" layoutY="198.0" mnemonicParsing="false" onAction="#replaceTask" text="Replace" />
         </children>
      </AnchorPane>
   </children>
</VBox>
